LIBS   = tinyxml/tinyxml.a libmythxml/libmythxml.a -ldl
LIBDIR = ../../../addons/pvr.mythtv
LIB    = ../../../addons/pvr.mythtv/XBMC_MythTV.pvr

SRCS = client.cpp MythXml.cpp

include ../Makefile.include

clean:
	-rm -f $(OBJS) $(LIB) *~
	$(MAKE) -C tinyxml clean
	$(MAKE) -C libmythxml clean

$(LIB): $(OBJS)
	$(MAKE) -C tinyxml
	$(MAKE) -C libmythxml
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -shared -g $(OBJS) $(LIBS) $(LIBDIRS) $(SILIB) -o $(LIB)
